     <form action="/admin/add-coupon" id="submit-form" method="post">
            <div class="p-3 p-lg-5 border ">
                {{#if Err}}
                <div>
                  <p class="text-danger">{{Err}}</p>
                </div>
                {{/if}}
                <div class="form-group row">
                    <div class="col-md-6">
                    <label for="c_fname" class="text-black">Coupon Name</label>
                    <input type="text" class="form-control" id="name" name="name" />
                    <span id="name-error" class="validation-label"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                    <label for="c_email" class="text-black">Coupon Code</label>
                    <input type="text" class="form-control" id="code" name="code" placeholder="" onkeyup="validateEmail()"/>
                    <span id="email-error" class="validation-label"></span> 
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                    <label for="c_mobile" class="text-black">Discount Amount</label>
                    <input type="tel" class="form-control" id="discount" name="discount" placeholder="" onkeyup="validatePhone()"/>
                    <span id="phone-error" class="validation-label"></span> 
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                    <label for="c_password" class="text-black">Expiry Date</label>
                    <input type="date" class="form-control" id="expiry" name="expiry" onkeyup="validatePassword()"/>
                    <span id="password-error" class="validation-label"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                    <label for="c_password" class="text-black">Min Purchase Amount</label>
                    <input type="tel" class="form-control" id="minAmount" name="minAmount" onkeyup="validatePassword()"/>
                    <span id="password-error" class="validation-label"></span>
                    </div>
                </div>
                <input type="text" style="display: none;" value="true" name="couponStatus" />
                <div class="form-group row">
                    <div class="col-lg-6">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" onclick="return validateForm()" value="Submit">
                    <span id="submit-error" class="validation-label"></span>
                    </div>
                </div>
            </div>
            </form>
      
