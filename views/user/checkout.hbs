<script>
    $(document).ready(function() {
      $('#myButton').click(function() {
        const inputValue = $('#myInput').val();
        console.log(inputValue)
        $.ajax({
          url: '/coupon-redeem',
          method: 'POST',
          data: { inputValue },
          success: function(response) {
            console.log(response);
            if(response.isValid){
              if(response.notExpired){
                if(response.usedCoupon){
                  document.getElementById('error').innerHTML=response.message;
                }
                else{
                let subtotal = document.getElementById('subtotal').value
                let disAmount = (response.discount*subtotal)/100;
                document.getElementById('discount').innerHTML=disAmount
                document.getElementById('total').value= subtotal-disAmount
                document.getElementById('total1').innerHTML= subtotal-disAmount
                }
              }else{
                document.getElementById('error').innerHTML=response.message;
              }
              
            }else{
               document.getElementById('error').innerHTML=response.message;
            }
            
          },
          error: function(xhr, status, error) {
            console.error(error);
          }
        });
      });
    });
</script>
<script>

   $("#checkout-form").submit((e)=>{

     var formData = $('#checkout-form').serialize();
     console.log("this is form data "+ formData);
        e.preventDefault()
        $.ajax({
            url:'/checkout',
            method:'post',
            data: formData,
            success:(response)=>{
                if(response.codSuccess){
                    location.href='/order-success'
                }
                else if(response.walletSuccess){
                    location.href='/order-success'
                }
                else{
                  razorpayPayment(response)
                }
            }
        })
    })

    function razorpayPayment(order){
      var options = {
          "key": "rzp_test_w5LFXl4hy4CQt2", // Enter the Key ID generated from the Dashboard
          "amount": order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
          "currency": "INR",
          "name": "Gemma Jewels", //your business name
          "description": "Test Transaction",
          "image": "https://example.com/your_logo",
          "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
          "handler": function (response){
              verifyPayment(response,order)
              },
          
          "prefill": {
              "name": "Gaurav Kumar", //your customer's name
              "email": "gaurav.kumar@example.com",
              "contact": "9000090000"
          },
          "notes": {
              "address": "Razorpay Corporate Office"
          },
          "theme": {
              "color": "#3399cc"
          }
      };
      var rzp1 = new Razorpay(options);
      rzp1.open();
    }
    function verifyPayment(payment,order){
      $.ajax({
        url:'/verify-payment',
        data:{
          payment,
          order
        },
        method:'post',
        success:(response)=>{
                if(response.status){
                    location.href='/order-success'
                }else{
                  alert("payment failed")
                }
            }
      })
    }

   
</script>