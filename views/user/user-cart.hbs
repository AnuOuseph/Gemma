                    </td>
                    <td class="product-name">
                      <h2 class="h5 text-black">{{this.product.name}}</h2>
                    </td>
                    <td>Rs.{{this.product.price}}</td>
                    
                    <td>
                      <div class="input-group mb-3" style="max-width: 120px;">
                        <div class="input-group-prepend">
                          <button class="btn btn-outline-primary js-btn-minus" type="button" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}',-1)">&minus;</button>
                        </div>
                        <span class="form-control text-center" id="{{this.product._id}}">{{this.quantity}}</span>
                        {{!-- <input type="text" class="form-control text-center" id="{{this.product._id}}" value="{{this.quantity}}" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1"> --}}
                        <div class="input-group-append">
                          <button class="btn btn-outline-primary js-btn-plus" type="button" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}',1)">&plus;</button>
                        </div>
                      </div>

                    </td>
                    <td>Rs.{{math this.product.price "*" this.quantity}}</td>
                    <td><button class="btn btn-primary height-auto btn-sm" type="button" onclick="removeProduct('{{this._id}}','{{this.product._id}}')">X</button></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
