<div class="modal fade" id="profile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel1">Upload profile picture?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="py-2">
            <form action="/add-profile-image" method="post" enctype="multipart/form-data">
              <div class="form-group row">
                <label class="col-sm-3 col-form-label">Profile Picture</label>
                <div class="col-sm-9">
                <input type="file" class="form-control" name="profile" class="file-upload-default" id="user-profile" placeholder="Upload Image">
                </div>
              </div>
              <div class="form-group col-md-6">
                <button class="btn btn-primary btn-sm btn-block" type="submit" >Save</button>
              </div>                            
            </form>
            </div> 
        </div>
        
      </div>
    </div>
  </div>


