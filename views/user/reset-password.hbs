<body>
    <div class="site-section" style="background-color: #ffedec; height:100vh;">
    <div class="container">
        <div class="row ">
        
                    <div class="col-md-6 mx-auto align-items-center justify-content-center">
                    <form action="/reset-new-password" method="post">
                    <div class="p-3 p-lg-5 border bg-white">
                        <div class="col-md-12 ">
                            <h2 class="h3 mb-3 text-black">New Password</h2>
                          </div>
                     
                      <div class="form-group row">
                        <div class="col-md-12">
                        <label for="c_password" class="text-black">New Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="password" name="password" onkeyup="validatePassword()"/>
                        <span id="password-error" class="validation-label text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                        <label for="c_password" class="text-black">Confirm Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="password2"  onkeyup="validatePassword2()"/>
                        <span id="password-error2" class="validation-label text-danger"></span>
                        </div>
                    </div>
                         
                      <div class="form-group row">
                        <div class="col-lg-6">
                          <input type="submit" class="btn btn-primary btn-lg btn-block" onclick="return validateForm()" value="Continue">
                            <span id="submit-error" class="validation-label text-danger"></span>
                        </div>
                      </div>
                    </div>
                  </form>
            
            {{!-- </form> --}}
            </div>
        </div>
        </div>
