  <script>
    function removeWishlist(wishlistId,proId){
      $.ajax({
        url:'/remove-wishlist',
        data:{
          wishlist:wishlistId,
          product:proId
        },
        method:'post',
        success:(response)=>{
          if(response.removeProduct){
            swal('Remove From Wishlist!', 'Are you sure?', 'warning', {
            button: "Ok",
          }).then(()=>{
            location.reload()
          })
            
          }
         
        }
      })
    }
  </script>