 <style>
  .container1{
    width: 530px;
    height: 500px;
    background: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;

}
.coupon-card{
    background: linear-gradient(135deg, #7158fe, #9d4de6);
    color: #fff;
    text-align: center;
    padding: 20px 50px;
    border-radius: 15px;
    box-shadow: 0 10px 10px 0 rgba(0,0,0,0.15);
    position: absolute;

}
.logo{
    width: 80px;
    border-radius: 8px;
    margin-bottom: 20px;

}
.coupon-card h3{
    font-size: 28px;
    font-weight: 400;
    line-height: 40px;

}
.coupon-card p{
    font-size: 15px;

}
.coupon-row{
    display: flex;
    align-items: center;
    margin: 0px auto;
    width: fit-content;

}
#cpnCode{
    border: 1px dashed #fff;
    padding: 10px 20px;
    border-right: 0;

}
#cpnBtn{
    border: 1px solid #fff;
    background: #fff;
    padding: 10px 20px;
    color: #7158fe;
    cursor: pointer;
}
.circle1, .circle2{
    background: #ffffff;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);

}
.circle1{
    left: -25px;
}
.circle2{
    right: -25px;
}

 </style>
<div class="site-wrap">
    {{!-- <div class=" py-3" style="background-color: #f9f9f9;">
      <div class="container">
        <div class="row">
          <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <a href="/user-shop">Profile</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Rewards</strong></div>
        </div>
      </div>
    </div>  --}}
    <div class="">
      <div class="container">
        <div class="row">
          {{#if wishCount}}
          <div class="col-md-12 d-flex justify-content-center mt-5">
            <div class="p-lg-3 p-3 border justify-content-center text-center">
              <img src="images/empty_reward.jpg" style="width: 400px;" alt="Image" class="img-fluid">
              <h3 class=" text-dark">You  Don't have any rewards yet!</h3>
              {{!-- <h5 class="sub-title text-dark">Looks like you haven't added anything to your Wishlist yet.</h5>
              <p><a href="/user-shop" class="btn btn-black rounded-0">Shop Now</a></p> --}}

            </div>
          </div> 

          {{else}}

            {{#each rewards}}
              <div class="col-lg-4 col-md-4 item-entry m-2">
                  <div class="d-flex">
                    <div class="container container1">
                        <div class="coupon-card">
                            <img src="/images/favicon.png" style="width:30px" class="logo">
                            <h5>{{this.name}}<br></h5>
                            <di class="coupon-row">
                                <span id="cpnCode">{{this.code}}</span>
                                <span id="cpnBtn">Copy Code</span>
                            </di>
                            <p>Valid Till: 20Dec, 2021</p>
                            <div class="circle1"></div>
                            <div class="circle2"></div>
                        </div>
                    </div>
                  </div>
              </div>
              {{/each}}
            {{/if}}
        </div>
      </div>
    </div>    
  </div>

  <script>
    var cpnBtn = document.getElementById("cpnBtn");
            var cpnCode = document.getElementById("cpnCode");

            cpnBtn.onclick = function(){
                navigator.clipboard.writeText(cpnCode.innerHTML);
                cpnBtn.innerHTML ="COPIED";
                setTimeout(function(){
                    cpnBtn.innerHTML="COPY CODE";
                }, 3000);
            }
  </script>
  