                     <td> <button class="btn btn-primary height-auto btn-sm" type="button" disabled="disabled" data-toggle="modal" >Return</button></td> --}}
                    {{else if this.isCancelled}}
                    <td> <button class="btn btn-primary height-auto btn-sm" type="button" disabled="disabled" data-toggle="modal" >Cancelled</button></td>
                    {{else if this.isRequested}}
                    <td> <button class="btn btn-primary height-auto btn-sm" type="button" disabled="disabled" data-toggle="modal" >Requested</button></td>
                    {{else if this.isReturned}}
                    <td> <button class="btn btn-primary height-auto btn-sm" type="button" disabled="disabled" data-toggle="modal" >Returned</button></td>
                    {{else}}
                    {{!-- <td><a href="/admin/cancel-order/{{this._id}}" class="btn btn-gradient-danger">cancel Order</a></td> --}}
                    <td><button type="button" class="btn btn-primary height-auto btn-sm" data-toggle="modal" data-target="#cancel{{this._id}}">Cancel Order</button> </td>
                    {{/if}}


                    {{!-- <td>
                        <a href="#"> <button class="btn btn-primary height-auto btn-sm" type="button" data-toggle="modal" data-target="#cancel{{this._id}}"> Cancel</button></a>
                    </td> --}}
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
